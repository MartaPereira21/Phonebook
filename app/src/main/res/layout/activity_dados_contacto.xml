<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DadosContacto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="30sp"
        android:padding="30dp"
        android:src="@drawable/profile" />


    <EditText
        android:id="@+id/et_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10sp"
        android:background="#00b38f"
        android:gravity="center"
        android:hint="Nome"
        android:padding="10dp"
        android:textColorHint="#ffffff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_sobrenome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10sp"
        android:background="#00b38f"
        android:gravity="center"
        android:hint="Sobrenome"
        android:padding="10dp"
        android:textColorHint="#ffffff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10sp"
        android:background="#00b38f"
        android:gravity="center"
        android:hint="NÃºmero"
        android:padding="10dp"
        android:textColorHint="#ffffff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_morada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10sp"
        android:background="#00b38f"
        android:gravity="center"
        android:hint="Morada"
        android:padding="10dp"
        android:textColorHint="#ffffff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10sp"
        android:background="#00b38f"
        android:gravity="center"
        android:hint="Email"
        android:padding="10dp"
        android:textColorHint="#ffffff"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/bt_call"
            android:layout_width="40sp"
            android:layout_height="50sp"
            android:layout_margin="20sp"
            android:src="@drawable/ic_call" />


        <ImageView
            android:id="@+id/bt_editar"
            android:layout_width="40sp"
            android:layout_height="50sp"
            android:layout_margin="20sp"
            android:src="@drawable/ic_editar" />

        <ImageView
            android:id="@+id/bt_eliminar"
            android:layout_width="40sp"
            android:layout_height="50sp"
            android:layout_margin="20sp"
            android:src="@drawable/ic_apagar" />

    </LinearLayout>


</LinearLayout>